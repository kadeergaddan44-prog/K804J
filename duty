    <script>
        let balance = 0;
        let activeInvestment = 0;
        let isLoginMode = true;

        // AUTH SYSTEM
        function switchAuth(mode) {
            isLoginMode = (mode === 'login');
            const nameField = document.getElementById('name-field');
            const title = document.getElementById('auth-title');
            const subtitle = document.getElementById('auth-subtitle');
            const btn = document.getElementById('auth-btn');
            const tLogin = document.getElementById('tab-login');
            const tReg = document.getElementById('tab-register');

            if (isLoginMode) {
                nameField.classList.add('hidden');
                title.innerText = "Welcome Back";
                subtitle.innerText = "Please enter your details to continue";
                btn.innerText = "Login Now";
                tLogin.className = "flex-1 py-2 rounded-xl font-bold text-sm bg-white text-blue-600 shadow-sm";
                tReg.className = "flex-1 py-2 rounded-xl font-bold text-sm text-slate-500";
            } else {
                nameField.classList.remove('hidden');
                title.innerText = "Create Account";
                subtitle.innerText = "Join K408 VIP and start earning";
                btn.innerText = "Register Now";
                tReg.className = "flex-1 py-2 rounded-xl font-bold text-sm bg-white text-blue-600 shadow-sm";
                tLogin.className = "flex-1 py-2 rounded-xl font-bold text-sm text-slate-500";
            }
        }

        function handleAuth() {
            const email = document.getElementById('user-email').value;
            const phone = document.getElementById('user-phone').value;
            const pass = document.getElementById('user-pass').value;

            if (email && phone && pass) {
                // Success
                document.getElementById('display-info').innerText = email + " | " + phone;
                document.getElementById('auth-screen').classList.add('hidden');
                document.getElementById('main-content').classList.remove('hidden');
                renderPlans();
            } else {
                alert("Please fill all fields!");
            }
        }

        // CORE LOGIC (Plans, Profit, UI)
        const plans = [{id:1, inv:500},{id:2, inv:1000},{id:3, inv:2500},{id:4, inv:5000},{id:5, inv:10000},{id:6, inv:20000},{id:7, inv:40000},{id:8, inv:60000},{id:9, inv:80000},{id:10, inv:100000}];

        function renderPlans() {
            const container = document.getElementById('plans-container');
            container.innerHTML = plans.map(p => `
                <div class="white-card p-5 rounded-[2rem] text-center border-b-4 border-blue-600">
                    <p class="text-[9px] text-blue-600 font-black uppercase mb-2">Package ${p.id}</p>
                    <h4 class="text-2xl font-black text-slate-800">${p.inv} PKR</h4>
                    <p class="text-[10px] text-blue-500 font-bold mt-2">Daily: ${(p.inv * 0.05).toFixed(0)}</p>
                    <button onclick="buyPlan(${p.inv})" class="mt-4 w-full py-2 bg-slate-800 text-white rounded-xl text-[10px] font-black uppercase hover:bg-blue-600 transition">Activate</button>
                </div>
            `).join('');
        }

        function buyPlan(amt) {
            if(balance >= amt) { balance -= amt; activeInvestment += amt; updateUI(); alert("Success!"); }
            else { alert("Insufficient Balance!"); }
        }

        function addDailyProfit() {
            if(activeInvestment > 0) { balance += (activeInvestment * 0.05); updateUI(); alert("5% Profit Released!"); }
            else { alert("No active investment!"); }
        }

        function adminUpdateBalance() {
            const v = parseFloat(document.getElementById('admin-bal-input').value);
            if(!isNaN(v)) { balance = v; updateUI(); alert("Updated!"); }
        }

        function toggleAdmin() { document.getElementById('admin-panel').classList.toggle('hidden'); }
        function openModal(id) { document.getElementById(id).classList.remove('hidden'); }
        function closeModal(id) { document.getElementById(id).classList.add('hidden'); }
        function updateUI() {
            document.getElementById('user-balance').innerText = balance.toLocaleString();
            document.getElementById('active-inv').innerText = activeInvestment.toLocaleString();
        }
    </script>
</body>
