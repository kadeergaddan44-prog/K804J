                <button onclick="toggleAdmin()" class="bg-slate-100 text-slate-600 px-3 py-1 rounded-full text-[10px] font-black uppercase">Admin</button>
                <button onclick="location.reload()" class="bg-red-50 text-red-600 px-3 py-1 rounded-full text-[10px] font-black uppercase">Logout</button>
            </div>
        </nav>

        <section id="admin-panel" class="hidden p-6 bg-slate-900 text-white">
            <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-slate-800 p-5 rounded-2xl border border-slate-700">
                    <p class="text-[10px] text-slate-400 font-bold mb-2">ADD BALANCE</p>
                    <input id="admin-bal-input" type="number" class="w-full bg-slate-900 border border-slate-600 p-3 rounded-xl mb-3 text-sm outline-none text-white">
                    <button onclick="adminUpdateBalance()" class="w-full bg-blue-600 py-2 rounded-xl text-xs font-bold uppercase">Update</button>
