<body>

    <div id="auth-screen" class="fixed inset-0 bg-slate-50 z-[9999] flex items-center justify-center p-4">
        <div class="white-card p-8 rounded-[2.5rem] max-w-md w-full border-b-8 border-blue-600">
            
            <div class="flex justify-center mb-8 bg-slate-100 p-1 rounded-2xl">
                <button id="tab-login" onclick="switchAuth('login')" class="flex-1 py-2 rounded-xl font-bold text-sm bg-white text-blue-600 shadow-sm">Login</button>
                <button id="tab-register" onclick="switchAuth('register')" class="flex-1 py-2 rounded-xl font-bold text-sm text-slate-500">Register</button>
            </div>

            <div class="text-center mb-6">
                <h2 id="auth-title" class="text-3xl font-black text-blue-700 tracking-tighter">Welcome Back</h2>
                <p id="auth-subtitle" class="text-slate-500 text-xs mt-1">Please enter your details to continue</p>
            </div>

            <div class="space-y-4">
                <div id="name-field" class="relative hidden">
                    <i class="fas fa-user absolute left-4 top-4 text-slate-400"></i>
                    <input id="user-name" type="text" placeholder="Full Name" class="input-box">
                </div>

                <div class="relative">
                    <i class="fas fa-envelope absolute left-4 top-4 text-slate-400"></i>
                    <input id="user-email" type="email" placeholder="Gmail Address" class="input-box">
                </div>

                <div class="relative">
                    <i class="fas fa-phone absolute left-4 top-4 text-slate-400"></i>
                    <input id="user-phone" type="tel" placeholder="Mobile Number" class="input-box">
                </div>

                <div class="relative">
                    <i class="fas fa-lock absolute left-4 top-4 text-slate-400"></i>
                    <input id="user-pass" type="password" placeholder="Password" class="input-box">
                </div>

                <button id="auth-btn" onclick="handleAuth()" class="w-full py-4 btn-blue rounded-2xl text-lg shadow-lg shadow-blue-200 uppercase tracking-widest mt-2">Login Now</button>
            </div>
            
            <p class="text-center text-[10px] text-slate-400 mt-6 uppercase font-bold tracking-widest">K408 VIP Secure System</p>
        </div>
    </div>

    <div id="main-content" class="hidden">
        <nav class="p-4 bg-white border-b flex justify-between items-center sticky top-0 z-50">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 blue-gradient rounded-xl flex items-center justify-center text-white shadow-lg"><i class="fas fa-crown"></i></div>
                <div>
                    <h1 class="text-lg font-bold text-slate-800">K408 VIP</h1>
                    <p id="display-info" class="text-[10px] text-slate-400 font-bold uppercase"></p>
